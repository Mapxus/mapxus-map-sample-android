<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/textview_shape_white_top_radius"
    tools:context=".examples.mapcreation.MapxusMapInitWithBuildingParamsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_keywords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/keywords"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_keywords"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:autofillHints=""
            android:background="@android:drawable/editbox_background_normal"
            android:hint="@null"
            android:inputType="text"
            android:padding="8dp"
            android:singleLine="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_order_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/order_by"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_order_by"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_shape_blue"
            android:text="@string/order_by_none"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="@string/order_by_none" />

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/category"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_category"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:autofillHints=""
            android:background="@android:drawable/editbox_background_normal"
            android:hint="@null"
            android:inputType="text"
            android:padding="8dp"
            android:singleLine="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_exclude_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exclude_category"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_exclude_category"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:autofillHints=""
            android:background="@android:drawable/editbox_background_normal"
            android:hint="@null"
            android:inputType="text"
            android:padding="8dp"
            android:singleLine="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_tips_venue_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/venue_id"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_venue_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:autofillHints=""
            android:background="@android:drawable/editbox_background_normal"
            android:hint="@null"
            android:inputType="text"
            android:padding="8dp"
            android:singleLine="true"
            android:text="@string/default_venue_id"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_tips_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/building_id"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:autofillHints=""
            android:background="@android:drawable/editbox_background_normal"
            android:hint="@null"
            android:inputType="text"
            android:padding="8dp"
            android:singleLine="true"
            android:text="@string/default_search_text_building_id"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_floor_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/floor_id"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_floor_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:autofillHints=""
            android:background="@android:drawable/editbox_background_normal"
            android:hint="@null"
            android:inputType="text"
            android:padding="8dp"
            android:singleLine="true"
            android:text="@string/default_floor_id"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_offset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/offset"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_offset"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:autofillHints=""
            android:background="@android:drawable/editbox_background_normal"
            android:hint="@null"
            android:inputType="number"
            android:padding="8dp"
            android:singleLine="true"
            android:text="@string/default_offset"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/page"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_page"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:autofillHints=""
            android:background="@android:drawable/editbox_background_normal"
            android:hint="@null"
            android:inputType="number"
            android:padding="8dp"
            android:singleLine="true"
            android:text="@string/default_page"
            android:textStyle="bold" />

        <Button
            android:id="@+id/create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape_blue"
            android:text="@string/create"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>